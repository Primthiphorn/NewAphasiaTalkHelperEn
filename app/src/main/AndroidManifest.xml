<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newaphasiatalkhelper.AphasiaTalkHelperEng">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/tool_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectItemActivity" />
        <activity android:name=".activities.TypeTextActivity" />
        <activity android:name=".activities.FavoriteActivity" />
        <activity android:name=".activities.ItemActivity" />
        <activity android:name=".activities.WelcomeActivity"></activity>
        <activity android:name=".activities.SosActivities" />
        <activity android:name=".activities.UserHome" />
        <activity android:name=".activities.InfoActivity"></activity>
    </application>

</manifest>