<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_toolbar_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/tool_logo"
            android:layout_gravity="center"/>


            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical">

               <ImageView
                   android:id="@+id/btn_gohome"
                   android:layout_width="52dp"
                   android:layout_height="52dp"
                   android:layout_marginTop="3dp"
                   android:layout_marginRight="3dp"
                   android:src="@mipmap/icon_gohome"
                   />

               <ImageView
                   android:id="@+id/btn_user_profile"
                   android:layout_width="52dp"
                   android:layout_height="52dp"
                   android:layout_marginTop="3dp"
                   android:src="@mipmap/icon_btnuser"

                   />

           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

            <ImageView

                android:id="@+id/btn_info"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/icon_info"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                />

                <ImageView

                    android:id="@+id/btn_sos"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/icon_btnsos"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.Toolbar>




</LinearLayout>