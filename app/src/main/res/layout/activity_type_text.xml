<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/area"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newaphasiatalkhelper.AphasiaTalkHelperEng.activities.TypeTextActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar">
    </include>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:inputType="textMultiLine"
    android:background="#ffffff"
    android:textSize="25sp"
    android:maxLines="2"
    android:lines="2"/>

    <TextView
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text=" X "
        android:textSize="20dp"
        android:background="#cccbcb"/>
</RelativeLayout>

    <ImageView
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_speech"
        android:layout_gravity="center"
        android:src="@mipmap/icon_btnspeak"
        android:layout_width="190dp"
        android:layout_height="50dp" />
    <ImageView
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_add_fav"
        android:layout_gravity="center"
        android:src="@mipmap/icon_btnaddfav"
        android:layout_width="190dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/btn_home"
        android:layout_gravity="center"
        android:src="@mipmap/icon_btnhome"
        android:layout_width="190dp"
        android:layout_height="50dp" />

</LinearLayout>
