<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newaphasiatalkhelper.AphasiaTalkHelperEng.activities.ItemActivity"
    android:orientation="vertical">
    <include layout="@layout/toolbar">
    </include>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#88FFFFFF">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    </LinearLayout>


    <ImageView
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:id="@+id/btn_speech"
        android:src="@mipmap/icon_btnrepeat"
        android:layout_width="250dp"
        android:layout_height="55dp"
         />

    <ImageView
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:id="@+id/btn_add_fav"
        android:src="@mipmap/icon_btnaddfav"
        android:layout_width="250dp"
        android:layout_height="55dp"
        />

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/btn_home"
        android:src="@mipmap/icon_btnhome"
        android:layout_width="250dp"
        android:layout_height="55dp" />

</LinearLayout>
